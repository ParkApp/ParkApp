<div class="model-dialog text-center">
  <img src="/images/parkImages/login.png" alt="">
</div>
<div class="container icons">
  <div class="column">
    <form action="/auth/login" method="POST" id="form-container" class="login ">
      <div class="form-group">
        <label for="username">Username</label>
        <input id="username" type="text" name="username" placeholder="Your Username" class="form-control">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input id="password" type="password" name="password" placeholder="Your password" class="form-control">
        <div class="form-group">
          {{#if message }}
          <div class="error-message">{{ message }}</div>
          {{/if}}
        </div>
        <div class="form-group"></div>
        <button type="submit" class="button1">Login</button>
      </div>
      <br>
      <p class="account-message">
        Don't have an account yet?
        <a href="/auth/signup">Signup</a>
      </p>
    </form>
    <div class="icons">
      <img src="/images/parkImages/banco.png" alt="icon">
      <img src="/images/parkImages/barbacoa.png" alt="icon">
      <img src="/images/parkImages/fuente.png" alt="icon">
    </div>
  </div>
</div>