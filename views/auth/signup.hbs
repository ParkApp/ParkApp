<h2 class="form-h2">Signup</h2>
<div class="container">
<form action="/auth/signup" method="POST" id="form-container" class="signup">
  <div class="form-group">
    <br>
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="Your Username" class="form-control">
</div>
<div class="form-group">
  <br>
  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password" class="form-control">
    <div class="form-group">
      <br>
  <label for="email">Email</label>
  <br>
  <br>
  <input id="email" type="email" name="email" placeholder="Your Email" class="form-control">
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button type="submit" class="btn btn-dark">Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</form>
