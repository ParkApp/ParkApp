<div class="model-dialog text-center">
  <img src="/images/parkImages/avatar1.jpg" alt="icon user">
</div>
<div class="container icons">
  <div class="column">
    <form action="/auth/signup" method="POST" id="form-container" class="signup">
      <div class="form-group">
        <label for="username">Username</label>
        <input id="username" type="text" name="username" placeholder="Your Username" class="form-control">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input id="password" type="password" name="password" placeholder="Your password" class="form-control">
        <div class="form-group">
          <label for="email">Email</label>
          <input id="email" type="email" name="email" placeholder="Your Email" class="form-control">
          {{#if message }}
          <div class="error-message">{{ message }}</div>
          {{/if}}
          <button type="submit" class="button1">Crear cuenta</button>
          <p class="account-message">
            Do you already have an account?
            <a href="/auth/login">Login</a>
          </p>
        </div>
      </div>
    </form>
  </div>
</div>