<h1>{{park.DS_NOMBRE}}</h1>
<div class="container">
  <div class="row justify-content-around">
    <div class="col 6">
      <img src="{{park.IMAGEN}}" alt="foto del parque">
    </div>
    <div class="col 4">
      <ul>
        {{#with park}}
        <li>Acceso :{{DS_ACCESO}}</li>
        <li>Mesa :{{IT_MESA}}</li>
        <li>Banco :{{IT_BANCO}}</li>
        <li>Papelera :{{IT_PAPELERA}}</li>
        <li>Contenedor :{{IT_CONTENEDOR}}</li>
        <li>Fuente : {{IT_FUENTE}}</li>
        <li>Señal :{{IT_SENAL}}</li>
        <li>Juegos :{{IT_JUEGOS}}</li>
        <li>Senda :{{IT_SENDA}}</li>
        <li>Kiosco :{{IT_KIOSCO}}</li>
        <li>Aseos :{{IT_ASEOS}}</li>
        <li>Estacionamiento :{{IT_ESTACIONAMIENTO}}</li>
        <li>Parking Bicis :{{IT_P_BICIS}}</li>
        <li>Baño :{{IT_BANO}}</li>
        <li>Barbacoa :{{IT_BARBACOA}}</li>
        {{/with}}
      </ul>
    </div>
  </div>
</div>
{{#if user}}
<div class="container">
  <h2>Nuevo evento</h2>

  <div class="col-md-4">
    <form action="/park-detail?id={{park._id}}" method="POST">
      <div class="form-group">
        <label for="field1">Date</label>
        <input type="text" class="form-control" id="field1" name="date">
      </div>
      <div class="form-group">
        <label for="field2"></label>Description</label>
        <input type="text" class="form-control" id="field2" name="description">
      </div>
      <div class="form-group">
        <label for="field3">Email</label>
        <input type="text" class="form-control" id="field3" name="email" placeholder="separar con coma">
      </div>
      <br>
      <button type="submit" class="btn btn-dark">Crear evento</button>
    </form>
  </div>
  {{/if}}